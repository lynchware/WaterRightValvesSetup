<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WaterRightValves.Pages.WiFiPassword"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:WaterRightValves.ViewModel"
    Title="WiFiPassword"
    x:DataType="viewmodels:WiFiPassViewModel">
    <ContentPage.BindingContext>
        <viewmodels:WiFiPassViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label
            Margin="0,0,0,40"
            Padding="20,5"
            Background="{StaticResource Primary20}"
            FontSize="Large"
            HorizontalOptions="FillAndExpand"
            HorizontalTextAlignment="Center"
            VerticalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span
                        FontAttributes="Bold"
                        Text="STEP 4: "
                        TextColor="{StaticResource Gray600}" />
                    <Span Text="Enter WiFi Password" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
            <Button
                Padding="15,5"
                Command="{Binding BackClickedCommand}"
                Text="Back" />
            <Label
                Margin="1,0"
                Padding="15"
                FontSize="Medium"
                Text="WiFi Password"
                VerticalOptions="End" />
            <Button
                Padding="15,0"
                Command="{Binding NextClickedCommand}"
                Text="Next" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>