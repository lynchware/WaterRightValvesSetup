<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WaterRightValves.Pages.Instructions"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:WaterRightValves.ViewModel"
    Title="Instructions"
    x:DataType="viewmodels:InstructionsViewModel">
    <ContentPage.BindingContext>
        <viewmodels:InstructionsViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="{Binding Brand}"
            VerticalOptions="Center" />
        <HorizontalStackLayout>
            <Button Command="{Binding BackClickedCommand}" Text="Go Back" />
            <Label FontSize="Large" Text="Instructions" />
            <Button Command="{Binding NextClickedCommand}" Text="Next" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>